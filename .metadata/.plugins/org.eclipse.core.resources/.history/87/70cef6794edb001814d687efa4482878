void AddRoundKey(unsigned int* state, unsigned int* round_key)
{
	for(int i = 0; i<4; i++){
		state[i] = state[i]^round_key[i];
	}
}

void subBytes(unsigned int* state)
{
	for(int i = 0; i<4; i++){
		int word1 = state[i] & x000000ff;
		int word2 = (state[i] & x0000ff00)>>8;
		int word3 = (state[i] & x00ff0000)>>16;
		int word4 = (state[i] & xff000000)>>24;
		state[i] = (aes_sbox[word4]<<24) | (aes_sbox[word3]<<16) | (aes_sbox[word2]<<8) | aes_sbox[word1];
	}
}

void shiftRow(unsigned int* state)
{
	int temp[4];
	for(int i = 0; i<4; i++){
		temp[i] = (state[i] & xff000000) | (state[(i+1)%4] & x00ff0000) | (state[(i+2)%4] & x0000ff00) | (state[(i+3)%4] & x000000ff);
	}
	for(int i = 0; i<4; i++){
		state[i]=temp[i];
	}
}

void mixColumns(unsigned int* state)
{
	for(int i = 0; i<4; i++){
		char a0x = ((state[i]*xff000000)<<1);
		if (state[i]<0){
			a0x = a0x^x00011011;
		}
		char a1x = ((state[i]*x00ff0000)<<1);
		if (state[i]<0){
			a1x = a1x^x00011011;
		}
		char a2x = ((state[i]*x0000ff00)<<1);
		if (state[i]<0){
			a2x = a2x^x00011011;
		}
		char a3x = ((state[i]*x000000ff)<<1);
		if (state[i]<0){
			a3x = a3x^x00011011;
		}
		char b0 = a0x^a1x^(state[i]*x00ffffff);
		char b1 = a1x^a2x^(state[i]*xff00ffff);
		char b2 = a2x^a3x^(state[i]*xffff00ff);
		char b3 = a3x^a0x^(state[i]*xffffff00);
		state[i]
	}
}
