#ifndef INCLUDE_CONFIG_H_
#define INCLUDE_CONFIG_H_

const uint16_t SCREEN_WIDTH = 480; // Screen height and width in pixels
const uint16_t SCREEN_HEIGHT = 360;

enum class Key {KEY_LEFT, KEY_RIGHT, KEY_JUMP, KEY_CROUCH, KEY_FIREBALL, NO_KEY, KEY_PAUSE};
enum class Collider_Id {GUMBA,
						PLAYER,
						FIREBALL,
						PLATFORM,
						BLOCK,
						COIN_BLOCK}; // List all the possible ojects on the screen. The background tells another object when it collides, and what it should do

const uint16_t GRAVITY_STRENGTH = 9;

