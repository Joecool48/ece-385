#include "item.h"
#include <stdlib.h>
#include "colliders.h"
#include "sprite_animator.h"
#include "config.h"
Item::Item (uint16_t start_x, uint16_t start_y, Rect_Collider rect) : Sprite_Animator (start_x, start_y, start_mode, start_state, start_frame), collider(rect){
}
Fireflower::Fireflower (uint16_t start_x, uint16_t start_y, Rect_Collider rect) : Item (start_x, start_y, start_mode, start_state, start_frame, rect) {
}
Mushroom::Mushroom (uint16_t start_x, uint16_t start_y, Rect_Collider rect) : Item (start_x, start_y, start_mode, start_state, start_frame, rect) {
	travelDir = rand() % 2;
}
Fireball::Fireball (uint16_t start_x, uint16_t start_y, Rect_Collider rect) : Sprite_Animator (start_x, start_y, Item::modes::NO_MODE, Item::states::ITEM_STATE), collider(rect){
}
Coin::Coin (uint16_t start_x, uint16_t start_y, Rect_Collider rect) : Item (start_x, start_y, ITEM_MODE, ITEM_STATE, ITEM_START_FRAME, rect) {
}

