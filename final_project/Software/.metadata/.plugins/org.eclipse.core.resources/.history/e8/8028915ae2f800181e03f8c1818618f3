#include "enemies.h"


void Gumba::animatorSetup() {
	state_mode_to_frames_map[WALKING][NORMAL_MODE] = Sprite()
}

void Turtle::animatorSetup() {
	Sprite turtle_up(x, y, 16, 32, 759584);
	Sprite turtle_walk_1(x, y, 16, 32, 761632);
	Sprite turtle_walk_2(x, y, 16, 32, 760096);
	Sprite turtle_shell_frame_1(x, y, 16, 32, 760608);
	state_mode_to_frames_map[WALKING][NORMAL_MODE].push_back(turtle_walk_1);
	state_mode_to_frames_map[WALKING][NORMAL_MODE].push_back(turtle_walk_2);
}

