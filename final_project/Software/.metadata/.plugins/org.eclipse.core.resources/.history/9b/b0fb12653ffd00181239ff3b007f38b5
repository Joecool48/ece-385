#include "../include/brain.h"

Brain::Brain(Rect_Collider collider) {

}
Brain::~Brain() {

}
Brain::makeDecision(int16_t velX) {

}
/*
 * Detects if the enemy will fall off the cliff in this many steps based on its current velocity
 */
bool Brain::willFallOffCliff(uint16_t numFrames, int16_t velX) {
	Rect_Collider update_collider = collider;
	if (velX < 0) {
		for (int i = numFrames; numFrames > 0; numFrames++) {
			update_collider.collide_x += velX;

		}
	}

}
