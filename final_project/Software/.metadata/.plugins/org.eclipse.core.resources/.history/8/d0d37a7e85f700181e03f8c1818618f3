#include "sprite_animator.h"
#include "colliders.h"

#ifndef INCLUDE_ITEM_H_
#define INCLUDE_ITEM_H_
/* TODO
 * Implement item setups
 */
class Item : public Sprite_Animator {
public:
	bool isCollectable;
	Rect_Collider collider;
	Item(uint16_t x, uint16_t y, );
};

class Fireflower : public Item {
	Fireflower();
	void update();
	void animatorSetup();
};

class Mushroom : public Item {
	Mushroom();
	void update();
	void animatorSetup();
};

class Coin : public Item {
	Coin();
	void update();
	void animatorSetup();
};

class Fireball : public Sprite_Animator {
	Fireball();
	Rect_Collider collider;
	void update();
	void animatorSetup();
};

#endif /* INCLUDE_ITEM_H_ */
