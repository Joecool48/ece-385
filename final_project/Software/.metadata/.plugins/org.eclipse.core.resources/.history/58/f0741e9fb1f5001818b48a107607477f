void Sprite_Animator::setState(uint16_t anim_state) {
	current_anim_state = anim_state;
}
void Sprite_Animator::advanceFrame() {
	current_frame_in_state += 1;
}
Sprite Sprite_Animator::getCurrentSprite() {
	return state_mode_to_frames_map[current_anim_state][current_anim_mode][current_frame_in_state];
}

