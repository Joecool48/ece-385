/*
 * Left KEY_A
 * UP 0x9e
 * DOWN 0x1e
 *
 * CROUCH KEY_S
 * UP 0x9f
 * DOWN 0x1f
 *
 * Right KEY_D
 * UP 0xa0
 * DOWN 0x20
 *
 * JUMP KEY_W
 * UP 0x91
 * DOWN 0x11
 *
 * FIREBALL KEY_SPACE
 * UP 0xb9
 * DOWN 0x39
 *
 * PAUSE KEY_ESC
 * UP 0x81
 * DOWN 0x01
 */


uint8_t Keyboard::getScanCode() {
	return *scancode_PIO;
}
int Keyboard::decodeKey(int scanCode) {return scanCode;}
Key Keyboard::getInputKey() {return Key::NO_KEY;} // Should return NO_KEY if no key is pressed
bool Keyboard::key_jump() {return true;}
bool Keyboard::key_left() {return true;}
bool Keyboard::key_right() {return true;}
bool Keyboard::key_crouch() {return true;}
bool Keyboard::key_fireball() {return true;}
bool Keyboard::multipleKeysPressed() {return true;} // Returns true if mult keys pressed
