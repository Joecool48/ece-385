#ifndef INCLUDE_SPRITE_H_
#define INCLUDE_SPRITE_H_

class Image {
public:
	unsigned x;
	unsigned y;
	unsigned width;
	unsigned height;
	unsigned start_address;
	virtual ~Image ();
};
class Sprite : public Image {

};
class Sprite_Animator {
	const unsigned IDLE_ANIM;
	const unsigned WALKING_ANIM;
	const unsigned RUNNING_ANIM;
	unsigned x;
	unsigned y;
	unsigned current_frame;
	unsigned animation_number;

	// Change the animation type
	void setAnimType(unsigned anim_num);
	void advanceFrames(unsigned num_frames);
};
class Mario_Animator : public Sprite_Animator {

};

#endif /* INCLUDE_SPRITE_H_ */
