#include "../include/config.h"

uint16_t sprite_x, sprite_y, sprite_width, sprite_height, sprite_id;
uint32_t sprite_address;
uint8_t sprite_flip_mode, scancode, hardware_done, software_done;

volatile uint32_t * const SPRITE_X_PIO = (uint32_t*) &sprite_x;
volatile uint32_t * const SPRITE_Y_PIO = (uint32_t*) &sprite_y;
volatile uint32_t * const SPRITE_WIDTH_PIO = (uint32_t*) &sprite_width;
volatile uint32_t * const SPRITE_HEIGHT_PIO = (uint32_t*) &sprite_height;
volatile uint32_t * const SPRITE_ID_PIO = (uint32_t*) &sprite_id;
volatile uint32_t * const SPRITE_ADDRESS_PIO = (uint32_t*) &sprite_address;
volatile uint32_t * const SPRITE_FLIP_MODE_PIO = (uint32_t*) &sprite_flip_mode;

volatile uint32_t * const SCANCODE_PIO = (uint32_t*) &scancode;
volatile uint32_t * const HARDWARE_DONE = (uint32_t*) &hardware_done;
volatile uint32_t * const SOFTWARE_DONE = (uint32_t*) &software_done;
